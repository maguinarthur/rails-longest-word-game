<h1 class="mb-4">New game</h1>

<div class="box">
<% @letters.each do |letter| %>
  <div class="case"> <%= letter %> </div>
<% end %>
</div>

<p class="mb-2">What is the longest word you can find ?</p>



<form method="post" action="/score" class="form-inline">
  <div class="form-group">
    <input type="text" name="answer" placeholder="Enter your word" class="form-control">
  </div>
  <div class="form-group">
    <input type="submit" value="Submit" class="form-control btn btn-primary">
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
